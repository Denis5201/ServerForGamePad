<Window x:Class="ServerInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<StackPanel>
			<StackPanel Orientation="Horizontal">
				<TextBlock x:Name="stateText" Text="Server state:" TextAlignment="Center" FontSize="14"></TextBlock >
				<TextBlock x:Name="state" Text="None" TextAlignment="Center" FontSize="14" Margin="10 0 0 0"></TextBlock >
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<TextBlock x:Name="hostText" Text="Host:" TextAlignment="Center" FontSize="14"></TextBlock >
				<TextBlock x:Name="host" Text="" TextAlignment="Center" FontSize="14" Margin="10 0 0 0"></TextBlock >
			</StackPanel>
			<Button x:Name="showHost" Content="Показать хост для подключения" Width="200" Margin="10" Click="showHost_Click" />
			<Button x:Name="buttonStart" Content="Запуск" Width="100" Click="buttonStart_Click" Margin="10" />
			<Canvas x:Name="myCanvas" Height="300">
				<Rectangle x:Name="rect" Fill="Black" Height="5" Width="5" Canvas.Top="0" Canvas.Left="0"></Rectangle>
			</Canvas>
		</StackPanel>
	</Grid>
</Window>
